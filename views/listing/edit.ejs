<% layout("/layouts/boilerplate") %>

    <div class="row">
        <div class="col-8 offset-2">
    <form  method="post"  action="/listings/<%=listing.id%>?_method=PUT" novalidate
         class="needs-validation" enctype="multipart/form-data">
    <h3>Edit Your Listing</h3>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" required value="<%=listing.title%>" name="listing[title]" class="form-control">
                <div class="invalid-feedback">
                    Please enter valid title.
                  </div>
            </div>
            <div class="mb-3">
                <label for="textarea" class="form-label">Description</label>
                <textarea name="listing[description]" required class="form-control"><%=listing.description%></textarea>
                <div class="invalid-feedback">
                    Please enter valid description.
                  </div>
            </div>

            <div class="mb-3">
                Image preview<br>
                <img src="<%=org_image_url%>" class="img-preview">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Upload new image </label>
                <input type="file"required value=<%=listing.image%> name="listing[image]" class="form-control">
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="text" required value="<%=listing.price%>" name="listing[price]" class="form-control">
                    <div class="invalid-feedback">
                        Please enter valid price.
                      </div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" required value="<%=listing.country%>" name="listing[country]" class="form-control">
                    <div class="invalid-feedback">
                        Please enter valid country.
                      </div>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" required value="<%=listing.location%>" name="listing[location]" class="form-control">
                <div class="invalid-feedback">
                    Please enter valid location.
                  </div>
            </div>
            <button class="btn btn-dark add-btn">update</button>
            <br><br>
        </form>
        </div>
    </div>


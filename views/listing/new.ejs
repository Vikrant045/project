<% layout("/layouts/boilerplate") %>


    <div class="row mt-3">

     <div class="col-8 offset-2">
            <form  method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" >
                <br>
                <h2>Create New Listing</h2>

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" 
                    placeholder="Add a catchy title" 
                    name="listing[title]"
                     class="form-control"
                     required
                     >
                     <div class="valid-feedback">
                        Looks good!
                      </div>
                      <div class="invalid-feedback">
                        Please enter valid title.
                      </div>
                </div>
                    <div class="mb-3">
                        <label for="textarea" class="form-label">Description</label>
                        <textarea name="listing[description]" id=""  placeholder="write description" class="form-control" required></textarea>
                        <div class="invalid-feedback">
                            Please enter valid description.
                          </div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image Link</label>
                        <input type="file"
                         name="listing[image]" 
                         class="form-control"
                         >
                
                    </div>
                    <div class="row">
                        <div class=" mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="text"
                            placeholder="1200"
                             name="listing[price]" 
                             class="form-control"
                             required
                             >
                             <div class="invalid-feedback">
                                Please enter valid price.
                              </div>
                        </div>
                        <div class=" mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" placeholder="India" name="listing[country]" class="form-control" required>
                            <div class="invalid-feedback">
                                Please enter valid country.
                              </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" placeholder="Mohali,Punjab" name="listing[location]" class="form-control" required>
                        <div class="invalid-feedback">
                            Please enter valid location.
                          </div>
                    </div>
                   
                        <button class="btn btn-dark add-btn">Add</button>
                        <br><br>
                    </form>
        </div>
    </div>
   

